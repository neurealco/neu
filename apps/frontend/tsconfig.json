{
    "extends": "astro/tsconfigs/strictest",
    "compilerOptions": {
      "jsx": "preserve",
      "jsxImportSource": "react",
      "baseUrl": ".",
      "paths": {
        "@lib/*": ["src/lib/*"],
        "@components/*": ["src/components/*"],
        "@layouts/*": ["src/layouts/*"],
        "@assets/*": ["src/assets/*"]
      },
      "strictNullChecks": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "types": ["astro/client"]
    },
    "include": ["src/**/*", ".astro/types.d.ts"],
    "exclude": ["node_modules", "dist"]
  }