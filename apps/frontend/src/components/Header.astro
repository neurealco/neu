<header class="header-container">
  <div class="header-left">
    <a href="/" class="logo-link">
      <span class="logo-gradient">NEUREAL</span>
    </a>
    <nav class="nav-links">
      <a href="/features">Features</a>
      <a href="/help">Help</a>
      <a href="/documentation">Documentation</a>
    </nav>
  </div>
  
  <div class="header-right">
      <div class="auth-buttons">
        <a href="/login" class="btn login-btn">Login</a>
        <a href="/sign-in" class="btn signup-btn">Sign Up</a>
      </div>
    )}
  </div>
</header>

<style>
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background-color: rgba(15, 23, 42, 0.8); /* Fondo oscuro con transparencia */
    backdrop-filter: blur(10px);
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .header-left {
    display: flex;
    align-items: center;
    gap: 2rem;
  }
  
  .logo-link {
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
  }
  
  .logo-gradient {
    background: linear-gradient(90deg, #6366F1, #8B5CF6);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
  }
  
  .logo-gradient::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, #6366F1, #8B5CF6);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }
  
  .logo-link:hover .logo-gradient::after {
    transform: scaleX(1);
    transform-origin: left;
  }
  
  .nav-links {
    display: flex;
    gap: 1.5rem;
  }
  
  .nav-links a {
    color: #cbd5e1;
    text-decoration: none;
    font-weight: 500;
    position: relative;
    padding: 0.5rem 0;
    transition: color 0.3s;
  }
  
  .nav-links a:hover {
    color: white;
  }
  
  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #6366F1, #8B5CF6);
    transition: width 0.3s ease;
  }
  
  .nav-links a:hover::after {
    width: 100%;
  }
  
  .auth-buttons {
    display: flex;
    gap: 1rem;
  }
  
  .btn {
    padding: 0.5rem 1.5rem;
    border-radius: 0.375rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s;
  }
  
  .login-btn {
    background: transparent;
    color: white;
    border: 1px solid #4f46e5;
  }
  
  .login-btn:hover {
    background: rgba(79, 70, 229, 0.1);
    transform: translateY(-2px);
  }
  
  .signup-btn {
    background: linear-gradient(90deg, #6366F1, #8B5CF6);
    color: white;
    border: none;
    box-shadow: 0 4px 6px -1px rgba(99, 102, 241, 0.3), 0 2px 4px -1px rgba(99, 102, 241, 0.2);
  }
  
  .signup-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(99, 102, 241, 0.3), 0 4px 6px -2px rgba(99, 102, 241, 0.2);
  }
  
  .user-section {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .user-email {
    color: #cbd5e1;
    font-size: 0.875rem;
  }
  
  .logout-btn {
    background: transparent;
    color: #f87171;
    border: 1px solid #f87171;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    cursor: pointer;
    transition: all 0.3s;
  }
  
  .logout-btn:hover {
    background: rgba(248, 113, 113, 0.1);
  }
</style>