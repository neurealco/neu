// apps/frontend/src/components/Header.astro
---

<header class="header-container">
  <div class="header-content">
    <div class="logo-container">
      <a href="/">
        <img src="../../../../assets/images/logoos.svg" alt="Neureal Logo" class="logo" />
      </a>
    </div>
    
    <nav class="nav-links">
      <a href="/features">Features</a>
      <a href="/help">Help</a>
      <a href="/documentation">Documentation</a>
    </nav>
    
    <div class="auth-buttons">
      <a href="/login" class="login-btn">Login</a>
      <a href="/sign-in" class="signup-btn">Sign Up</a>
    </div>
  </div>
</header>

<style>
  /* Paleta de colores elegante */
  :root {
    --dark-bg: #121212;       /* Fondo negro intenso */
    --darker-bg: #0a0a0a;     /* Negro más oscuro */
    --light-text: #ffffff;    /* Blanco puro */
    --muted-text: #b0b0b0;    /* Gris claro para texto secundario */
    --primary: #6366f1;       /* Azul violeta para botón Sign Up */
    --primary-dark: #4f46e5;  /* Azul violeta más oscuro */
    --border: #2a2a2a;        /* Borde gris oscuro */
  }
  
  .header-container {
    background-color: var(--dark-bg);
    border-bottom: 1px solid var(--border);
    padding: 1.2rem 2rem;
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .header-content {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .logo-container {
    display: flex;
    align-items: center;
  }
  
  .logo {
    height: 46px;
    width: auto;
    transition: transform 0.3s ease;
  }
  
  .logo:hover {
    transform: scale(1.05);
  }
  
  .nav-links {
    display: flex;
    gap: 2.5rem;
  }
  
  .nav-links a {
    color: var(--muted-text);
    text-decoration: none;
    font-weight: 500;
    position: relative;
    padding: 0.5rem 0;
    transition: all 0.3s;
    font-size: 1rem;
  }
  
  .nav-links a:hover {
    color: var(--light-text);
  }
  
  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--light-text);
    transition: width 0.3s ease;
  }
  
  .nav-links a:hover::after {
    width: 100%;
  }
  
  .auth-buttons {
    display: flex;
    gap: 1.2rem;
  }
  
  /* ESTILO ORIGINAL DE LOS BOTONES QUE TE GUSTABAN */
  .login-btn,
  .signup-btn {
    padding: 0.7rem 1.7rem;
    border-radius: 8px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 1rem;
  }
  
  .login-btn {
    background: transparent;
    color: var(--light-text);
    border: 1px solid var(--primary); /* Borde azul violeta */
  }
  
  .login-btn:hover {
    background: rgba(99, 102, 241, 0.1); /* Fondo azul muy tenue */
    transform: translateY(-2px);
  }
  
  .signup-btn {
    background: linear-gradient(90deg, var(--primary), var(--primary-dark));
    color: white;
    border: none;
    font-weight: 600;
    box-shadow: 0 4px 6px rgba(99, 102, 241, 0.3);
  }
  
  .signup-btn:hover {
    background: linear-gradient(90deg, var(--primary-dark), #4338ca);
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(99, 102, 241, 0.4);
  }
  
  /* Responsive */
  @media (max-width: 900px) {
    .header-container {
      padding: 1rem;
    }
    
    .header-content {
      flex-wrap: wrap;
    }
    
    .nav-links {
      order: 3;
      width: 100%;
      justify-content: center;
      margin-top: 1.2rem;
      gap: 1.2rem;
      padding: 0.8rem 0;
      border-top: 1px solid var(--border);
    }
    
    .auth-buttons {
      margin-left: auto;
    }
    
    .logo {
      height: 40px;
    }
  }
  
  @media (max-width: 480px) {
    .nav-links {
      font-size: 0.9rem;
      gap: 1rem;
    }
    
    .login-btn,
    .signup-btn {
      padding: 0.6rem 1.2rem;
      font-size: 0.9rem;
    }
    
    .logo {
      height: 36px;
    }
  }
</style>