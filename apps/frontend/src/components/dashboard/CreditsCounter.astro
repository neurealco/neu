---
const { credits } = Astro.props;
---

<div class="credits-counter">
  <span class="credits-value">{credits.toLocaleString()}</span>
  <span class="credits-label">Credits</span>
</div>

<style>
  .credits-counter {
    display: inline-flex;
    align-items: center;
    background: rgba(16, 185, 129, 0.1);
    padding: 8px 16px;
    border-radius: 20px;
    font-weight: 600;
  }

  .credits-value {
    color: var(--success);
    margin-right: 6px;
    font-size: 1.1rem;
  }

  .credits-label {
    font-size: 0.9rem;
  }
</style>
