---
const { user } = Astro.props;
const menuItems = [
  { name: "Dashboard", href: "/dashboard", icon: "üìä" },
  { name: "Analytics", href: "/dashboard/analytics", icon: "üìà" },
  { name: "Surveys", href: "/dashboard/surveys", icon: "üìù" },
  { name: "Balance", href: "/dashboard/balance", icon: "üí∞" },
  { name: "Settings", href: "/dashboard/settings", icon: "‚öôÔ∏è" },
];
---

<aside class="sidebar">
  <div class="user-info">
    <div class="avatar">
      <img
        src={user.avatar || "/assets/images/default-avatar.png"}
        alt={user.email}
        width="80"
        height="80"
      />
    </div>
    <div class="user-details">
      <h3>{user.name || user.email.split("@")[0]}</h3>
      <p>{user.email}</p>
    </div>
  </div>

  <nav class="menu">
    {
      menuItems.map((item) => (
        <a
          href={item.href}
          class={Astro.url.pathname === item.href ? "active" : ""}
        >
          <span class="icon">{item.icon}</span>
          <span class="name">{item.name}</span>
        </a>
      ))
    }
  </nav>

  <div class="credits-display">
    <div class="credits-label">Available Credits</div>
    <div class="credits-value">{user.credits?.toLocaleString() || "0"}</div>
  </div>
</aside>

<style>
  .sidebar {
    width: 280px;
    background: var(--card-bg);
    border-right: 1px solid var(--card-border);
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    padding: 30px 20px;
    display: flex;
    flex-direction: column;
  }

  .user-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 30px;
    border-bottom: 1px solid var(--card-border);
    margin-bottom: 30px;
  }

  .avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 15px;
    border: 3px solid var(--primary);
  }

  .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .user-details {
    text-align: center;
  }

  .user-details h3 {
    font-size: 1.2rem;
    margin-bottom: 5px;
  }

  .user-details p {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .menu {
    display: flex;
    flex-direction: column;
    gap: 10px;
    flex-grow: 1;
  }

  .menu a {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 15px;
    border-radius: 8px;
    color: var(--text-secondary);
    transition: all 0.3s;
  }

  .menu a:hover,
  .menu a.active {
    background: rgba(99, 102, 241, 0.1);
    color: var(--text);
  }

  .menu .icon {
    font-size: 1.2rem;
  }

  .menu .name {
    font-weight: 500;
  }

  .credits-display {
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.2);
    border-radius: 12px;
    padding: 15px;
    text-align: center;
  }

  .credits-label {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-bottom: 5px;
  }

  .credits-value {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--success);
  }
</style>
