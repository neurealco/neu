---
const navigation = [
  { name: "Home", href: "/" },
  { name: "Dashboard", href: "/dashboard" },
  { name: "Pricing", href: "/pricing" },
];
---

<header class="header">
  <div class="container">
    <div class="header-inner">
      <div class="logo">
        <a href="/">
          <img
            src="/assets/images/logo.png"
            alt="NeuReal"
            width="40"
            height="40"
          />
          <span>NeuReal</span>
        </a>
      </div>

      <nav class="nav">
        {
          navigation.map((item) => (
            <a
              href={item.href}
              class={Astro.url.pathname === item.href ? "active" : ""}
            >
              {item.name}
            </a>
          ))
        }
      </nav>

      <div class="auth-buttons">
        <a href="/login" class="btn btn-outline">Login</a>
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background: rgba(15, 23, 42, 0.8);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--card-border);
    padding: 15px 0;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo a {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .logo img {
    width: 40px;
    height: 40px;
  }

  .nav {
    display: flex;
    gap: 30px;
  }

  .nav a {
    position: relative;
    font-weight: 500;
    color: var(--text-secondary);
  }

  .nav a:hover,
  .nav a.active {
    color: var(--text);
  }

  .nav a.active::after {
    content: "";
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--primary);
  }

  .auth-buttons {
    display: flex;
    gap: 15px;
  }
</style>
