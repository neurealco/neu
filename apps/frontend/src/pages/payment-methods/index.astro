---
import MainLayout from "../../layouts/MainLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
export const prerender = true;
---

<MainLayout title="Payment Methods - Neureal">
  <Header />

  <main class="payment-container">
    <div class="payment-header">
      <h1 class="payment-title">Secure Payment Options</h1>
      <p class="payment-subtitle">
        Powered by Paddle - Global transactions made simple
      </p>
    </div>

    <section class="payment-methods">
      <div class="method-card">
        <h2 class="method-category">Credit & Debit Cards</h2>
        <div class="card-grid">
          <div class="card-brand visa">Visa</div>
          <div class="card-brand mastercard">Mastercard</div>
          <div class="card-brand amex">Amex</div>
          <div class="card-brand discover">Discover</div>
        </div>
      </div>

      <div class="method-card">
        <h2 class="method-category">Digital Wallets</h2>
        <div class="wallet-grid">
          <div class="wallet-item apple-pay">Apple Pay</div>
        </div>
      </div>
    </section>

    <section class="currencies-section">
      <h2 class="currencies-title">Supported Currencies</h2>
      <div class="currency-grid">
        <div class="currency-item">USD</div>
        <div class="currency-item">EUR</div>
        <div class="currency-item">GBP</div>
        <div class="currency-item">JPY</div>
        <div class="currency-item">AUD</div>
        <div class="currency-item">CAD</div>
        <div class="currency-item">CHF</div>
        <div class="currency-item">NZD</div>
        <div class="currency-item">SEK</div>
        <div class="currency-item">NOK</div>
        <div class="currency-item">DKK</div>
        <div class="currency-item">SGD</div>
      </div>
    </section>

    <div class="security-badge">
      <svg width="32" height="32" viewBox="0 0 24 24"
        ><path
          fill="currentColor"
          d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12c5.16-1.26 9-6.45 9-12V5l-9-4m0 6c1.4 0 2.8 1.1 2.8 2.5V11c.6 0 1.2.6 1.2 1.3v3.5c0 .6-.6 1.2-1.3 1.2H9.2c-.6 0-1.2-.6-1.2-1.3v-3.5c0-.6.6-1.2 1.2-1.2V9.5C9.2 8.1 10.6 7 12 7m0 1.2c-.8 0-1.5.6-1.5 1.3V11h3V9.5c0-.7-.7-1.3-1.5-1.3Z"
        ></path></svg
      >
      <span>PCI DSS Compliant Payment Processing</span>
    </div>
  </main>

  <Footer />
</MainLayout>
