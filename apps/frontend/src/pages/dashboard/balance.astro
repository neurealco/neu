---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import { getUsage, getSubscriptionDetails } from "../../lib/api";
// Añadir importación de getSession
import { getSession } from "../../lib/auth";

const session = await getSession(Astro.request);
if (!session) {
  return Astro.redirect("/login");
}

const usage = await getUsage(session.user.id);
const subscription = await getSubscriptionDetails(session.user.id);
---


<DashboardLayout title="Usage & Subscription">
  <div class="balance-container">
    <div class="subscription-card">
      <h1>Your Subscription Plan</h1>
      <div class="plan-name">{subscription.plan.toUpperCase()}</div>
      
      <div class="plan-details">
        <div class="detail">
          <span>AI Chats:</span>
          <span>{subscription.limits.ai_chat} per month</span>
        </div>
        <div class="detail">
          <span>Stats Refresh:</span>
          <span>{subscription.limits.youtube_refresh} per month</span>
        </div>
        <div class="detail">
          <span>Status:</span>
          <span class="status-active">Active</span>
        </div>
      </div>

      <div class="plan-actions">
        <a href="/pricing" class="btn">Upgrade Plan</a>
        <a href="/subscription" class="btn btn-outline">Manage Subscription</a>
      </div>
    </div>

    <div class="usage-stats">
      <h2>Current Usage</h2>
      
      <div class="usage-item">
        <div class="usage-info">
          <div class="usage-title">AI Assistant Chats</div>
          <div class="usage-date">Current monthly usage</div>
        </div>
        <div class="usage-amount">
          {usage.ai_chat.current}/{usage.ai_chat.limit}
        </div>
      </div>
      
      <div class="usage-item">
        <div class="usage-info">
          <div class="usage-title">Stats Refresh</div>
          <div class="usage-date">Current monthly usage</div>
        </div>
        <div class="usage-amount">
          {usage.youtube_refresh.current}/{usage.youtube_refresh.limit}
        </div>
      </div>
      
      <div class="usage-item">
        <div class="usage-info">
          <div class="usage-title">Next Reset</div>
          <div class="usage-date">Usage cycle resets on</div>
        </div>
        <div class="usage-amount">
          {new Date().toLocaleDateString('en-US', { 
            month: 'long', 
            day: 'numeric' 
          })}
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>

<style>
  .balance-container {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .subscription-card {
    background: linear-gradient(135deg, var(--darker), rgba(30, 41, 59, 0.8));
    border: 1px solid var(--card-border);
    border-radius: 16px;
    padding: 40px;
    text-align: center;
  }

  .subscription-card h1 {
    font-size: 2rem;
    margin-bottom: 15px;
  }

  .plan-name {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 30px;
    color: var(--primary);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .plan-details {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin-bottom: 30px;
    text-align: left;
  }

  .detail {
    display: flex;
    justify-content: space-between;
    padding: 15px;
    background: rgba(30, 41, 59, 0.5);
    border-radius: 8px;
  }

  .status-active {
    color: var(--success);
    font-weight: 600;
  }

  .plan-actions {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
  }

  .usage-stats {
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 16px;
    padding: 30px;
  }

  .usage-stats h2 {
    font-size: 1.8rem;
    margin-bottom: 25px;
    color: var(--text);
  }

  .usage-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    border-bottom: 1px solid var(--card-border);
  }

  .usage-item:last-child {
    border-bottom: none;
  }

  .usage-info {
    flex-grow: 1;
  }

  .usage-title {
    font-weight: 500;
    margin-bottom: 5px;
    font-size: 1.1rem;
  }

  .usage-date {
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .usage-amount {
    font-weight: 700;
    font-size: 1.2rem;
    background: rgba(99, 102, 241, 0.1);
    padding: 8px 15px;
    border-radius: 20px;
    min-width: 100px;
    text-align: center;
  }

  @media (max-width: 768px) {
    .plan-details {
      grid-template-columns: 1fr;
    }
    
    .plan-actions {
      flex-direction: column;
    }
  }
</style>