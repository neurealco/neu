---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Neureal Help</title>
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/footer.css" />
    <link rel="stylesheet" href="/styles/help-center.css" />
  </head>

  <body>
    <Header />

    <main class="help-container">
      <h1 class="article-title">{title}</h1>
      <div class="markdown-content">
        <slot />
      </div>
    </main>

    <Footer />

    <style is:global>
      .help-container {
        max-width: 780px;
        margin: 2rem auto;
        padding: 0 1.5rem;
      }

      .article-title {
        font-size: 2.4rem;
        color: #fff;
        margin: 0 0 2.5rem;
        font-weight: 700;
        line-height: 1.2;
      }

      /* Listas ajustadas */
      .markdown-content ol {
        counter-reset: step-counter;
        margin: 2.5rem 0;
        padding-left: 3.5rem;
        list-style: none;
      }

      .markdown-content ol li {
        position: relative;
        margin: 1.5rem 0;
        font-size: 1.1rem;
        line-height: 1.7;
        color: rgba(255, 255, 255, 0.9);
        min-height: 2.5rem;
        display: flex;
        align-items: center;
      }

      .markdown-content ol li::before {
        content: counter(step-counter);
        counter-increment: step-counter;
        position: absolute;
        left: -3.5rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1.8rem;
        font-weight: 400;
        color: #fff;
        opacity: 0.9;
      }

      /* Tablas limpias */
      .markdown-content table {
        width: 100%;
        margin: 3rem 0;
        border-collapse: collapse;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 8px;
        overflow: hidden;
      }

      .markdown-content th,
      .markdown-content td {
        padding: 1.2rem;
        text-align: left;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      }

      .markdown-content th {
        background: rgba(255, 255, 255, 0.06);
        color: #fff;
        font-weight: 500;
        font-size: 0.95rem;
      }

      /* Encabezados */
      .markdown-content h2 {
        font-size: 1.8rem;
        color: #fff !important;
        margin: 3rem 0 1.5rem;
        font-weight: 600;
        letter-spacing: -0.3px;
      }

      @media (max-width: 768px) {
        .help-container {
          padding: 0 1rem;
        }

        .article-title {
          font-size: 2rem;
          margin-bottom: 2rem;
        }

        .markdown-content ol {
          padding-left: 3rem;
        }

        .markdown-content ol li::before {
          left: -3rem;
          font-size: 1.6rem;
        }

        .markdown-content table {
          display: block;
          overflow-x: auto;
        }
      }
    </style>
  </body>
</html>