{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "incremental": true,
      "tsBuildInfoFile": "./dist/.tsbuildinfo",
      "noErrorTruncation": true
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/*.d.ts"
    ]
  }